{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Install Dependencies",
			"type": "shell",
			"command": "pip",
			"args": [
				"install",
				"-r",
				"requirements.txt"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Run Signal Generator",
			"type": "shell",
			"command": "python",
			"args": [
				"run_signals.py"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Start Dashboard",
			"type": "shell",
			"command": ".venv\\Scripts\\python.exe",
			"args": [
				"-m",
				"streamlit",
				"run",
				"simple_working_app.py",
				"--server.port",
				"8501"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Start Enhanced Saudi App",
			"type": "shell",
			"command": ".venv\\Scripts\\python.exe",
			"args": [
				"-m",
				"streamlit",
				"run",
				"web_launcher_professional.py",
				"--server.port",
				"8501"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Run Tests",
			"type": "shell",
			"command": "python",
			"args": [
				"test_app.py"
			],
			"group": "test",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Setup Application",
			"type": "shell",
			"command": "python",
			"args": [
				"setup.py"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Run Backtest",
			"type": "shell",
			"command": "python",
			"args": [
				"-m",
				"src.backtesting.backtest"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": []
		}
	]
}